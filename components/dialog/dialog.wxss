.ui_dialog{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index:999;
}
.dialog_mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}
.dialog_wrap{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 540rpx;
  z-index: 100;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.dialog_main{
  padding: 44rpx 32rpx 52rpx;
}
.dialog_title{
  text-align: center;
  color: #333333;
  font-size: 34rpx;
}
.dialog_enter{
  margin-top: 40rpx;
}
.email_num{
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 4rpx;
  border:1px solid #E6E6E6;
  background: #F7F7F7;
  color: #333333;
  font-size: 28rpx;
  padding-left: 16rpx;
}
.hint_msg{
  color: #FF0000;
  font-size: 26rpx;
  height: 36rpx;
  padding:2rpx 0;
}
.dialog_subtitle{
  color: #333333;
  font-size: 26rpx;
  text-align:left;
}
.text_sign{
  color: #FF7B35;
}
.dialog_footer{
  width: 100%;
  height: 90rpx;
  display: flex;
  border-top: 1rpx solid #E6E6E6;
 
  font-size: 34rpx;
}
.dialog_btn{
  line-height: 90rpx;
  text-align: center;
  flex: 1;
  background: #fff;
  border:none;
}
.dialog_btn::after{
  border:none
}
.is_cancel{
  color: #5A5F65;
  border:none;

}
.is_ok{
  color:#0AC373;
  border-left: 1rpx solid rgba(230,230,230,0.8);
  border-radius: 0;
}