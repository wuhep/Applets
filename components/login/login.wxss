/* components/login.wxss */

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
}

.content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 594rpx;
  background-color: #fff;
  padding: 50rpx 26rpx 0;
  box-sizing: border-box;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #252c34;
}

.des {
  font-size: 26rpx;
  color: #5a5f65;
  margin-top: 8rpx;
}

.phone {
  width: 300rpx;
  height: 90rpx;
  border: none;
  background: linear-gradient(124deg, rgba(26, 217, 116, 1) 0%, rgba(23, 214, 146, 1) 100%);
  border-radius: 45rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 90rpx;
  margin-top: 86rpx;
}

.select1, .select2 {
  width: 352rpx;
  height: 156rpx;
}

.select {
  margin-top: 42rpx;
  display: flex;
}

.prompt {
  position: absolute;
  left: 50%;
  bottom: 200rpx;
  transform: translate(-50%, 0);
  font-size: 15px;
  color: #f00;
}
